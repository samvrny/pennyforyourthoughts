<article class="container text-center">
    <div class="row justify-content-center">
        <section class="col-8">
            <h2>{{post.title}} by {{user.username}}</h2>
            <p>{{post.post_contents}}</p>
        </section>
        <section class="col-8 comments">
            <h3>Comments:</h3>
            <ul>
                {{#each post.comments as |comment|}}
                <li>
                    <p>Wrote by {{comment.user.username}} on {{comment.created_at}} :</p>
                    <p>{{comment.comment_body}}</p>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
</article>