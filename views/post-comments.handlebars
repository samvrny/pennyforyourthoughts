<article class="container text-center">
    <div class="row justify-content-around">
        <section class="col-8 single-post">
            <h2>"{{post.title}}" by {{post.user.username}} on {{format_date post.created_at}}</h2>
            <p>{{post.post_contents}}</p>
        </section>
        <section class="col-8 comments">
            <h3>Comments:</h3>
            <ul>
                {{#each post.comments as |comment|}}
                <li class="comments single-comment">
                    <p>On {{format_date comment.created_at}}, {{comment.user.username}} wrote:</p>
                    <p>"{{comment.comment_body}}"</p>
                </li>
                {{/each}}
            </ul>
        </section>

        {{#if loggedIn}}
        <form class="col-4 post-comment-form">
            <h3>Add a comment to this post:</h3>
            <div>
                <textarea name="comment-body" class="comment-textarea"></textarea>
            </div>
            <button type="submit" class="btn btn-warning">Add Comment</button>
        </form>
        {{/if}}
    </div>
</article>

{{#if loggedIn}}
<script src="/javascript/post-comment.js"></script>
{{/if}}

